FROM python:3.10.9-slim-buster
WORKDIR backend
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1
ENV LOGGING__LEVEL="INFO"
ENV HOST="0.0.0.0"
ENV PORT=8000
ENV UVICORN_WORKERS=3
ENV UVICORN_ARGS "run:app --host ${HOST} --port ${PORT} --workers ${UVICORN_WORKERS}"
ENV POSTGRES__DB=""
ENV POSTGRES__USER=""
ENV POSTGRES__PASSWORD=""
ENV POSTGRES__HOST=""
ENV POSTGRES__PORT=5432
ENV POSTGRES__DSN=postgres://${POSTGRES__USER}:${POSTGRES__PASSWORD}@${POSTGRES__HOST}:${POSTGRES__PORT}/${POSTGRES__DB}

EXPOSE 8000
RUN pip install --upgrade pip  --no-cache-dir
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
COPY backend .
CMD uvicorn $UVICORN_ARGS

